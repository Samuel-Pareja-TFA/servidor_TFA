### BASE: http://localhost:8080/api/v1

#################################################################
# 1) Registro de usuario (público) -> /auth/register
POST http://localhost:8080/api/v1/auth/register
Content-Type: application/json

{
  "username": "samuel",
  "password": "MiPass123!",
  "email": "samu@example.com",
  "description": "Un usuario nuevo para samu"
}

#################################################################
# 2) Login de usuario (público) -> /auth/login
POST http://localhost:8080/api/v1/auth/login
Content-Type: application/json

{
  "username": "SAMUELILLO",
  "password": "MiPass123!"
}

#################################################################
# 2b) Refresh token (opcional)
POST http://localhost:8080/api/v1/auth/refresh
Content-Type: application/json

{
  "refreshToken": "eyJhbGciOiJIUzI1NiJ9.eyJzdWIiOiJTYW11ZWwiLCJpYXQiOjE3NjMwMzk2NDksImV4cCI6MTc2MzY0NDQ0OX0.XNQJLQn96qCklAZ-bztRMaf9-UKGbvaAE9FGiFitJ0k"
}

#################################################################
# 3) Editar sólo el nombre de usuario (PATCH) (PRIVADO -> requiere Authorization)
#    Sustituye {{ACCESS_TOKEN}} por el access_token devuelto en el login.
PATCH http://localhost:8080/api/v1/users/8/username
Content-Type: application/json
Authorization: Bearer eyJhbGciOiJIUzI1NiJ9.eyJlbWFpbCI6InNhbXVAZXhhbXBsZS5jb20iLCJzdWIiOiJTYW11ZWwiLCJpYXQiOjE3NjMwMzk2OTgsImV4cCI6MTc2MzAzOTg3OH0._1CBUI8GEs_LgkdjUtEhbUWkRZY59a15poGgKgXtfBQ

{
  "username": "SAMUELILLO"
}

#################################################################
# 4) Buscar usuario por username (público)
GET http://localhost:8080/api/v1/users/by-username/SAMUELILLO
Accept: application/json

